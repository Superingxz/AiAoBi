<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/radius_bg_2">
   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:orientation="horizontal"
       android:layout_margin="20dp">
       <ImageView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/tishi"/>
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="提示！"
           android:textColor="@color/text_black_color"
           android:layout_gravity="center_vertical"
           android:layout_marginLeft="10dp"
           android:textSize="18sp"/>
   </LinearLayout>
    <TextView
        android:id="@+id/dialog_diy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定要删除该条码？"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColor="@color/orange"
        android:layout_marginBottom="2dp"
       />
    <ListView
        android:id="@+id/dialog_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="center_horizontal"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp">
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/dialog_diy_btncancel"
            style="@style/buttonStyleYellow"
            android:text="取消"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"/>
        <Button
            android:id="@+id/dialog_diy_btnyes"
            style="@style/buttonStyle"
            android:text="确定"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>