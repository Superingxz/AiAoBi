<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@mipmap/official_info_grid_bg"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >
    <TextView
        android:id="@+id/adapter_my_lower_orders_bar_num"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="序号"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:id="@+id/adapter_my_lower_orders_bar_month"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="订单号"
        android:lines="2"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:id="@+id/adapter_my_lower_orders_bar_agent"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="代理商"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold"

        />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />

    <TextView
        android:id="@+id/adapter_my_lower_orders_bar_total"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="产品名称"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:id="@+id/adapter_my_lower_orders_bar_total_num"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="数量"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:id="@+id/adapter_my_lower_orders_bar_total_money"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="金额"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold" />

</LinearLayout>