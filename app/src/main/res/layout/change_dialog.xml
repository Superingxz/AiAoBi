<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/radius_bg_2">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="更改服务器地址："
        android:textColor="@color/orange"
        android:layout_margin="5dp"
        android:drawableLeft="@mipmap/fuwuqi"
        android:gravity="center_vertical"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/orange"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器ip："
            android:textColor="@android:color/holo_blue_light"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/change_dialog_ip"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_listview2"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="服务器ip："
            android:visibility="invisible"
            android:textColor="@android:color/holo_blue_light"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>
        <CheckBox
            android:id="@+id/change_dialog_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设置为默认地址"
            android:textColor="@color/orange"
            android:layout_marginLeft="5dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="接口前缀："
            android:textColor="@android:color/holo_blue_light"
            android:layout_margin="5dp"
            android:layout_gravity="center_vertical"/>
        <EditText
            android:id="@+id/change_dialog_qianzui"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@drawable/shape_listview2"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center_horizontal"
       >
        <Button
            android:id="@+id/change_dialog_checkbtn"
            style="@style/buttonStyle"
            android:text="测试连接"
            />
        <Button
            android:id="@+id/change_dialog_yesbtn"
            style="@style/buttonStyle"
            android:text="确定"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/change_dialog_canclebtn"
            style="@style/buttonStyle"
            android:text="取消"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="25dp" />
</LinearLayout>