<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@mipmap/official_info_grid_bg"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    >

    <TextView
        android:id="@+id/adapter_my_price_num"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="序号"
        android:textSize="10sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        />
    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="名称规格"
        android:textSize="10sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:lines="2"
        />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:id="@+id/my_price_bar_price1"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="我的拿货价(元)"
        android:textSize="10sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />

    <TextView
        android:id="@+id/my_price_bar_price2"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="发货价下1级(元）"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="10sp" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:id="@+id/my_price_bar_more"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="更多"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="10sp" />
</LinearLayout>