<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="25dp"
    android:background="@mipmap/official_indent_gtrid_bg"
    android:layout_marginRight="30dp"
    android:layout_marginLeft="30dp">
    <TextView
        android:id="@+id/adapter_undercler_down_wait_gnumber"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:text="订单号"
        android:textColor="@color/green"
        android:textSize="12dp" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />


    <TextView
        android:id="@+id/adapter_undercler_down_wait_name"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="名称"
        android:textSize="12dp"
        android:textColor="@color/green"
        android:lines="2"/>

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />


    <TextView
        android:id="@+id/adapter_undercler_down_wait_money"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="金额"
        android:textColor="@color/green"
        android:textSize="12dp" />
</LinearLayout>