<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <xinlan.com.AiAoBi.view.TitileView
        android:id="@+id/my_lower_orders_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单时间*："
            android:textColor="@color/official_yellow"
            android:textStyle="bold"
            android:textSize="12sp"/>
        <TextView
            android:id="@+id/check_my_orders_from_date"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/official_bt"
            android:layout_weight="1"
            android:text="选择日期"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:gravity="center"
            android:cursorVisible="false"
            android:editable="false"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:src="@mipmap/to"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
        <TextView
            android:id="@+id/check_my_orders_to_date"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:background="@drawable/official_bt"
            android:layout_weight="1"
            android:text="选择日期"
            android:textColorHint="@color/white"
            android:textColor="@color/white"
            android:gravity="center"
            android:cursorVisible="false"
            android:editable="false"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">
        <TextView
            android:textColor="@color/official_yellow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="12sp"
            android:textStyle="bold"
            android:text="产品名称*："/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="30dp"
            android:background="@mipmap/official_info_grid_bg"
            android:layout_gravity="center">
            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/check_my_orders_spinner"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                />
        </LinearLayout>
        <Button
            android:id="@+id/check_my_orders_btn_check"
            style="@style/buttonStyle"
            android:layout_marginLeft="5dp"
            android:text="查询"/>
    </LinearLayout>


    <include layout="@layout/adapter_check_my_orders_bar"/>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="50dp"
        >
        <ListView
            android:id="@+id/check_my_orders_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"
            android:divider="#00000000"
            android:dividerHeight="2dp"
            android:scrollbars="none"
            />
        <TextView
            android:id="@+id/check_my_orders_listview_tvmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="暂无数据!"
            android:textColor="@color/white"
            android:drawableTop="@mipmap/nadata"
            android:visibility="gone"/>
    </FrameLayout>

</LinearLayout>