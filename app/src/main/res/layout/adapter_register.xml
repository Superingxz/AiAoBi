<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/official_info_grid_bg"
    >
    <TextView
        android:id="@+id/adapter_register_num"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:text="序号"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        android:layout_gravity="center"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_register_time"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_weight="3"
        android:layout_height="wrap_content"
        android:text="收款时间"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_register_man"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="打款人"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_register_firstMon"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1.5"
        android:layout_gravity="center_vertical"
        android:layout_height="wrap_content"
        android:text="首款(元)"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_register_balance"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:text="余款(元)"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        />
</LinearLayout>