<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <xinlan.com.AiAoBi.view.TitileView
            android:id="@+id/scan_title_view"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center_vertical"
             />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:textColor="@color/official_yellow"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人："
                />
            <TextView
                android:id="@+id/user_info"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:padding="3dp"
                android:layout_weight="1"
                android:background="@mipmap/official_info_grid_bg"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="11212"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">
            <TextView
                android:textColor="@color/official_yellow"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货人电话："
                />
            <TextView
                android:id="@+id/user_phone"
                android:layout_width="wrap_content"
                android:layout_height="25sp"
                android:padding="3dp"
                android:layout_weight="1"
                android:background="@mipmap/official_info_grid_bg"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="您老劳斯莱斯"/>
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="收货地址："
                android:textColor="@color/official_yellow"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />

            <TextView
                android:id="@+id/user_info_adress"
                android:layout_width="0dp"
                android:layout_height="25dp"
                android:padding="3dp"
                android:layout_weight="1"
                android:background="@mipmap/official_info_grid_bg"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:gravity="center_vertical"
                android:text="您老劳斯莱斯" />
        </LinearLayout>



        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/official_yellow"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="快递公司："
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="25dp"
                android:background="@mipmap/official_info_grid_bg"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                <Spinner
                    android:id="@+id/spinner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    />

            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">

            <TextView
                android:textColor="@color/official_yellow"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"
                android:text="快递单号："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

         <EditText
             android:id="@+id/number"
             android:layout_width="0dp"
             android:layout_weight="1"
             android:layout_height="25dp"
             android:textSize="12sp"
             android:background="@mipmap/official_info_grid_bg"
             android:lines="1"
             android:textStyle="bold"
             android:textColor="@color/green"/>
            <Button
                android:id="@+id/express_btn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                style="@style/buttonStyle"
                android:text="扫描"
                android:layout_marginLeft="5dp"/>
        </LinearLayout>


        <Button
            android:id="@+id/scan_bt"
            style="@style/buttonStyle"
            android:layout_margin="15dp"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:text="开始扫描"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:layout_gravity="center_horizontal"/>

        <LinearLayout
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:text="条码"
                android:layout_height="wrap_content"
                android:textColor="@color/official_yellow"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical"/>

            <EditText
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:id="@+id/edite_code"
                android:layout_weight="3"
                android:layout_width="0dp"
                android:minHeight="30dp"
                android:layout_height="25dp"
                android:lines="1"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="12sp"
                android:background="@mipmap/official_info_grid_bg"
                android:paddingLeft="5dp"
                />
            <Button
                android:id="@+id/edit_code_sure"
                style="@style/buttonStyleYellow"
                android:textColor="@android:color/white"
                android:layout_marginRight="5dp"
                android:text="输码确认"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:textStyle="bold"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:layout_above="@+id/submit_layout"
        android:layout_below="@+id/user_info_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:background="@mipmap/official_info_grid_bg"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:orientation="horizontal"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp">

            <TextView
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="10sp"
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:gravity="center"
                android:text="产品名称" />

            <View
                android:layout_width="0.2dp"
                android:layout_height="match_parent"
                android:background="@mipmap/official_indent_gtrid_line" />

            <TextView
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="10sp"
                android:id="@+id/total"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="要货数">
            </TextView>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@mipmap/official_indent_gtrid_line" />
            <TextView
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="10sp"
                android:id="@+id/alreadynum"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:gravity="center"
                android:text="已发数" />
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@mipmap/official_indent_gtrid_line" />
            <TextView
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="10sp"
                android:id="@+id/num"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="本次发货数" />

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@mipmap/official_indent_gtrid_line"/>

            <TextView
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="10sp"
                android:id="@+id/lessnum"
                android:gravity="center"
                android:layout_weight="0.6"
                android:layout_width="0dp"
                android:text="欠货"
                android:layout_height="match_parent"
                >
            </TextView>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@mipmap/official_indent_gtrid_line" />

            <TextView
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="10sp"
                android:gravity="center"
                android:layout_weight="0.8"
                android:layout_width="0dp"
                android:text="操作"
                android:layout_height="match_parent"
                >
            </TextView>
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="2dp">
            <LinearLayout
                android:id="@+id/reminder"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@mipmap/official_info_grid_bg"
                android:gravity="center"
                android:visibility="gone">
                <TextView
                    android:drawableTop="@mipmap/nadata"
                    android:layout_gravity="center"
                    android:drawablePadding="5dp"
                    android:text="没有货品信息数据"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <ListView
                android:divider="#00000000"
                android:id="@+id/scan_listview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                android:dividerHeight="2dp"

                />
        </FrameLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="10dp"
        android:layout_alignParentBottom="true"
        android:id="@+id/submit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <Button
            android:layout_alignParentLeft="true"
            android:id="@+id/submit_add"
            style="@style/buttonStyle"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:text="增加包材"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"/>

        <Button
            android:layout_alignParentRight="true"
            android:id="@+id/submit"
            style="@style/buttonStyle"
            android:layout_height="25dp"
            android:layout_centerHorizontal="true"
            android:text="确认发货"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:paddingLeft="15dp"
            android:paddingRight="15dp" />

    </RelativeLayout>

</RelativeLayout>