<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <xinlan.com.AiAoBi.view.TitileView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"/>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:background="@mipmap/official_indent_gtrid_bg">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="申请时间："
                        style="@style/whiteTextviewStyle"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vvvvvv"
                        style="@style/greenTextviewStyle"
                       />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:background="@mipmap/official_indent_gtrid_bg">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="姓名："
                        android:layout_marginLeft="5dp"
                        style="@style/whiteTextviewStyle"/>

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vvvvvv"
                        style="@style/greenTextviewStyle"
                         />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/official_indent_gtrid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="电话："
                        style="@style/whiteTextviewStyle"
                        android:layout_marginLeft="5dp"
                        />

                    <TextView
                        android:id="@+id/phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vvvvvv"
                        style="@style/greenTextviewStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/official_indent_gtrid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="加入级别："
                        android:layout_marginLeft="5dp"
                        style="@style/whiteTextviewStyle"/>

                    <TextView
                        android:id="@+id/level_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vvvvvv"
                        style="@style/greenTextviewStyle" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_incard"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/official_info_grid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="身份证号："
                        android:layout_marginLeft="5dp"
                        style="@style/whiteTextviewStyle"/>

                    <TextView
                        android:id="@+id/id_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vvvvvv"
                        style="@style/greenTextviewStyle" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_iv_idcard"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:id="@+id/id_car_img1"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        android:layout_marginRight="10dp"
                        />

                    <ImageView
                        android:id="@+id/id_car_img2"
                        android:layout_width="0dp"
                        android:layout_height="80dp"
                        android:layout_weight="1"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/official_indent_gtrid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="微信号："
                        style="@style/whiteTextviewStyle"
                        android:layout_marginLeft="5dp"
                       />

                    <TextView
                        android:id="@+id/wx_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vvvvvv"
                        style="@style/greenTextviewStyle" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/official_indent_gtrid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="推荐人："
                        android:layout_marginLeft="5dp"
                        style="@style/whiteTextviewStyle"/>

                    <TextView
                        android:id="@+id/recommend_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="vvvvvv"
                        style="@style/greenTextviewStyle"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/official_indent_gtrid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="申请人上级："
                        style="@style/whiteTextviewStyle"
                        android:layout_marginLeft="5dp"
                       />

                    <TextView
                        android:id="@+id/re_top_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:text="vvvvvv"
                        style="@style/greenTextviewStyle" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/pay_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@mipmap/official_info_grid_bg"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/pay_text"
                        android:layout_width="70dp"
                        android:layout_height="wrap_content"
                        android:text="申请人付款凭证："
                        android:layout_marginLeft="5dp"
                        style="@style/whiteTextviewStyle"
                        android:layout_gravity="center_vertical"/>

                    <ImageView
                        android:id="@+id/pay_img"
                        android:adjustViewBounds="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxWidth="250dp"
                        android:maxHeight="100dp"
                        android:src="@drawable/shape_listview3"/>
                </LinearLayout>
            </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="18dp"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/performance"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="最近业绩"
                        android:textSize="15sp"
                        style="@style/buttonStyle"
                        android:textStyle="bold"
                        />
                    <Button
                        android:id="@+id/agree"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="同意加入"
                        android:textSize="15sp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:textStyle="bold"
                        style="@style/buttonStyle"/>
                    <Button
                        android:id="@+id/update"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="退回修改"
                        android:textSize="15sp"
                        style="@style/buttonStyleYellow"
                        android:textStyle="bold"/>
                </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>