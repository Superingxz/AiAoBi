<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <xinlan.com.AiAoBi.view.TitileView
        android:id="@+id/activity_send_goods_title"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="收货人信息："
        android:layout_marginLeft="30dp"
        android:textColor="@color/official_yellow"
        android:textStyle="bold"
        android:textSize="12sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp">
        <TextView
            android:id="@+id/activity_send_goods_receive_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:background="@mipmap/official_info_grid_bg"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"
            android:paddingLeft="10dp"
            />
        <Button
            android:id="@+id/activity_send_goods_select_btn"
            android:layout_margin="5dp"
            style="@style/buttonStyle"
            android:text="选择收货人"/>
    </LinearLayout>

    <TextView
        android:id="@+id/activity_send_goods_receive_name2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:textColor="@color/official_yellow"
        android:textStyle="bold"
        android:textSize="12sp"
        android:layout_marginBottom="5dp"/>
    <include layout="@layout/adapter_send_goods_lv_bar"/>
    <ListView
        android:id="@+id/activity_send_goods_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="50dp"
        android:divider="#00000000"
        android:dividerHeight="2dp"
        android:scrollbars="none"/>
</LinearLayout>