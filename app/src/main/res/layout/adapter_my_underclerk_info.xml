<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/official_info_grid_bg"
    >
    <TextView
        android:id="@+id/adapter_my_underclerk_info_num"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="0.8"
        android:layout_height="wrap_content"
        android:text="序号"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_gravity="center"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_my_underclerk_info_date"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:text="日期"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_gravity="center"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_my_underclerk_info_name"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="2"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:text="名称规格"
        android:lines="2" android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_my_underclerk_info_price"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="发货价"
        android:lines="2"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_gravity="center"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_my_underclerk_info_counts"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="数量"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_gravity="center"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_my_underclerk_info_money"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="金额"
        android:lines="2"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:layout_gravity="center"/>
</LinearLayout>