<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/official_info_grid_bg"
    >
    <TextView
        android:id="@+id/adapter_send_goods_title"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="序号"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_send_goods_receive_man"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1.5"
        android:layout_height="wrap_content"
        android:text="收货人"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/red"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_send_goods_need_num"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="要货数"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_send_goods_has_send_num"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="已发数"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_send_goods_this_send_num"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1.3"
        android:layout_height="wrap_content"
        android:text="本次发货"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:id="@+id/adapter_send_goods_Owegood"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="欠货"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@color/line_color" />

    <TextView
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="无"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/green"
        android:lines="2"
        />
</LinearLayout>