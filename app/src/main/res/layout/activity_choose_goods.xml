<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <xinlan.com.AiAoBi.view.TitileView
        android:id="@+id/title_view"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"/>


    <LinearLayout
        android:id="@+id/title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/skin"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/shape_bt"
            android:gravity="center"
            android:padding="5dp"
            android:text="护肤"
            android:textColor="@color/white"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/food"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:background="@drawable/shape_bt_bule"
            android:gravity="center"
            android:padding="5dp"
            android:text="食品"
            android:textColor="@color/white"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/sanitation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@drawable/shape_bt_green"
            android:gravity="center"
            android:padding="5dp"
            android:text="卫生用品"
            android:textColor="@color/white"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/material"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="0.7"
            android:background="@drawable/shape_bt_organ"
            android:gravity="center"
            android:padding="5dp"
            android:text="包材"
            android:textColor="@color/white"
            android:textSize="15dp" />


        <TextView
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/all"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.7"
            android:background="@drawable/shape_bt_lan"
            android:gravity="center"
            android:padding="5dp"
            android:text="全部"
            android:textColor="@color/white"
            android:textSize="15dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@mipmap/official_info_grid_bg"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/num"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="序号"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <View

                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@mipmap/official_indent_gtrid_line" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:gravity="center"
                android:text="选择"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="12sp">


            </TextView>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@mipmap/official_indent_gtrid_line" />

            <TextView
                android:id="@+id/name"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3"
                android:gravity="center"
                android:text="名称规格"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:background="@mipmap/official_indent_gtrid_line" />

            <TextView
                android:id="@+id/unit_price"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="单价"
                android:textColor="@color/green"
                android:textStyle="bold"
                android:textSize="12sp"/>
        </LinearLayout>


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/reminder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="没有货品信息数据"
                android:visibility="gone" />

            <ListView
                android:id="@+id/lv"
                android:layout_marginTop="2dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:divider="#00000000"
                android:dividerHeight="2dp"
                android:layout_marginBottom="50dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>