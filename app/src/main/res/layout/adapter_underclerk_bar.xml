<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="25dp"
    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:background="@mipmap/official_indent_gtrid_bg"
    >
    <TextView
        android:id="@+id/adapter_undercler_number"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_weight="0.5"
        android:text="序号"
        android:textSize="10sp"
        android:textColor="@color/green"
        android:lines="2"
        android:textStyle="bold"
        />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />

    <TextView
        android:id="@+id/adapter_undercler_indent_number"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="订单号"
        android:textColor="@color/green"
        android:textSize="10sp"
        android:textStyle="bold"
        />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />


    <TextView
        android:id="@+id/adapter_undercler_man"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="订货人"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="10sp" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />


    <TextView
        android:id="@+id/adapter_undercler_time"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="时间"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="10sp" />

    <View
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />


    <TextView
        android:id="@+id/adapter_undercler_money"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="金额"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="10sp" />
</LinearLayout>