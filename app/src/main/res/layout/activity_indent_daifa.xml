<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <xinlan.com.AiAoBi.view.TitileView
        android:id="@+id/indent_daifa_titleview"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货人："
            android:textColor="@color/official_yellow"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/indent_daifa_receive_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="灰灰//18826255168"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单号："
            android:textColor="@color/official_yellow"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/indent_daifa_receive_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A18826255168"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="收货地址："
            android:textColor="@color/official_yellow"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/indent_daifa_receive_adress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="广东省广州市海珠区新港东路238号世港国际A栋803"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@mipmap/official_indent_gtrid_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_gravity="center"
            android:layout_weight="1.5"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="序号"
                android:textColor="@color/green"
                android:textSize="12sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@mipmap/official_indent_gtrid_line" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="2"
            android:gravity="center"
            android:text="名称规格"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@mipmap/official_indent_gtrid_line" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="单价"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:textStyle="bold"/>

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@mipmap/official_indent_gtrid_line" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="订货数"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@mipmap/official_indent_gtrid_line" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center"
            android:text="金额"
            android:textColor="@color/green"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="0.6"
        >

        <ListView
            android:id="@+id/indent_info_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#00000000"
            android:dividerHeight="1dp"
            />
        <LinearLayout
            android:id="@+id/indent_daifa_tv_msg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@mipmap/official_info_grid_bg"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableTop="@mipmap/nadata"
                android:layout_gravity="center"
                android:text="暂无数据!"
                android:textColor="@color/white"/>
        </LinearLayout>

    </FrameLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/indent_daifa_profit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/official_yellow"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            android:text="利润："/>
        <TextView
            android:id="@+id/indent_daifa_allnum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/official_yellow"
            android:textStyle="bold"
            android:textSize="12sp"
            android:layout_marginRight="20dp"
            android:text="总订货数："/>
        <TextView
            android:id="@+id/indent_daifa_allmon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/official_yellow"
            android:textStyle="bold"
            android:textSize="12sp"
            android:text="总金额："/>
    </LinearLayout>

    <!--处理下级代发订单-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下级要求代发原因:"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="12sp"/>

            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <Button
                android:id="@+id/down_indent_daifa_scan_btn"
                style="@style/buttonStyle"
                android:layout_height="25dp"
                android:text="我现在扫码发货"
                android:textSize="12sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:gravity="center"
                />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/down_indent_daifa_down_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@mipmap/official_indent_gtrid_bg"
                android:lines="3"
                android:text="1.陈慧芳由于要货数量较大，我这边没有库存所以需要上级代发 李明 2016-09-08"
                android:textSize="12sp"
                android:textColor="@color/green"
                android:padding="5dp"/>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="5dp"
            android:text="我代发的原因:"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="12sp"/>

        <EditText
            android:id="@+id/down_indent_daifa_me_editext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/edit_text"
            android:lines="3"
            android:gravity="left"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/down_indent_daifa_agree_btn"
                style="@style/buttonStyle"
                android:text="所选产品我同意并申请代发"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                />

            <Button
                android:id="@+id/down_indent_daifa_back_btn"
                style="@style/buttonStyleYellow"
                android:layout_marginLeft="15dp"
                android:text="退回" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>