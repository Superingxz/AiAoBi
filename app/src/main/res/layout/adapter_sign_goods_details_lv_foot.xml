<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/adapter_sign_goods_details_lv_foot_num"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="序号"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />

    <TextView
        android:id="@+id/adapter_sign_goods_details_lv_foot_name"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:layout_height="wrap_content"
        android:text="名称规格"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:id="@+id/adapter_sign_goods_details_lv_foot_price"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="单价"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:id="@+id/adapter_sign_goods_details_lv_foot_ordernum"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="订货数"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:id="@+id/adapter_sign_goods_details_lv_foot_deliverNum"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="已发货"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:lines="2"
        />

    <android.support.v4.widget.Space
        android:layout_width="0.5dp"
        android:layout_height="match_parent"
        android:background="@mipmap/official_indent_gtrid_line" />
    <TextView
        android:id="@+id/adapter_sign_goods_details_lv_foot_OweGoods"
        android:layout_width="0dp"
        android:gravity="center"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:text="欠货"
        android:textSize="12sp"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:lines="2"
        />

</LinearLayout>