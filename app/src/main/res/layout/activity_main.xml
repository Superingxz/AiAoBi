<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/official_main_backgroud"
    android:orientation="vertical"
    tools:context="xinlan.com.AiAoBi.MainActivity"
    android:fitsSystemWindows="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:background="@mipmap/official_touming_bg">

    <ImageView
        android:id="@+id/activity_main_imageview"
        android:layout_width="200dp"
        android:layout_height="120dp"
        android:src="@mipmap/official_logo"
        android:layout_gravity="center_horizontal"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:background="@mipmap/official_bg_phone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/official_user_icon"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                 />

            <EditText
                android:id="@+id/activity_main_phonenumber"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:lines="1"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                 />
        </LinearLayout>
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        >

        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="6"
            android:orientation="horizontal"
            android:background="@mipmap/official_bg_phone">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/official_pw"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                />

            <EditText
                android:id="@+id/activity_main_password"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="15sp"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:lines="1"
                android:background="@null"
                android:inputType="textPassword"
                android:layout_marginRight="10dp"
                android:textColor="@color/white"
                 />
        </LinearLayout>
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>

    <Button
        android:id="@+id/activity_main_login"
        android:layout_width="130dp"
        android:layout_height="35dp"
        android:background="@drawable/shape_login"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="15dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
        <ImageView
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@mipmap/official_forget"
            android:layout_gravity="center_vertical"/>
        <TextView
            android:id="@+id/activity_main_forgetPasswoed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/forgetPassword"
            android:textSize="12sp"
            android:layout_gravity="center_vertical"
           />
        <CheckBox
            android:id="@+id/activity_main_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
           />

        <TextView
            android:id="@+id/activity_main_remenberPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="@dimen/twentydp"
            android:text="@string/rememberPassword"
            android:textSize="12sp"
             />


        <android.support.v4.widget.Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/activity_main_kangyu"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="29dp"
            android:background="@drawable/shape_mbt"
            android:layout_gravity="center"
           />
        <android.support.v4.widget.Space
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="30dp"
                android:background="@mipmap/official_zhuang"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <android.support.v4.widget.Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/official"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="官方申请加入"
        android:textColor="@color/white"
        android:background="@mipmap/official_jion2"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>
    <TextView
        android:id="@+id/general_agency"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="总代申请加入"
        android:textColor="@color/white"
        android:background="@mipmap/official_jion2"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>
    <TextView
        android:id="@+id/stair"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="一级申请加入"
        android:textColor="@color/white"
        android:background="@mipmap/official_jion2"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>
    <TextView
        android:id="@+id/dealer_down"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:text="经销商、特约、花瓣申请加入"
        android:textColor="@color/white"
        android:background="@mipmap/official_jion2"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"/>
</LinearLayout>
