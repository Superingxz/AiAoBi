<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <xinlan.com.AiAoBi.view.TitileView
        android:id="@+id/uderclerk_indent_titleview"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:gravity="center_vertical"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/official_indent_title"
       />
    <include layout="@layout/adapter_underclerk_bar"
        />
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="3dp">
        <ListView
            android:id="@+id/uderclerk_indent_will_dispose_lv"
            android:divider="#00000000"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none"
            android:dividerHeight="2dp"

            />
        <TextView
            android:id="@+id/uderclerk_indent_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="暂无数据!"
            android:drawableTop="@mipmap/nadata"
            android:textColor="@color/white"
            android:visibility="gone"/>
    </FrameLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
       >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/official_indent_all_d"/>
        <Button
            android:id="@+id/uderclerk_indent_tv_add"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:background="@drawable/official_yellow_bt"
            android:textColor="@color/green"
            android:textSize="8sp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="30dp"
            android:gravity="center"
            android:text="我再加点"
            android:textStyle="bold"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />
    </RelativeLayout>
    <include layout="@layout/adapter_undercler_all_bar"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="3dp"
        >
        <ListView
            android:id="@+id/uderclerk_indent_alldisposed_lv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:divider="#00000000"
            android:dividerHeight="2dp"
            android:scrollbars="none"
            />
        <TextView
            android:id="@+id/uderclerk_indent_alldisposed_tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableTop="@mipmap/nadata"
            android:text="暂无数据!"
            android:textColor="@color/white"
            android:visibility="gone"
            />
    </FrameLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="25dp">
        <Button
            android:id="@+id/uderclerk_indent_btn_postage"
            style="@style/buttonStyle"
            android:layout_height="25dp"
            android:background="@drawable/official_bt"
            android:text="预测邮费"
            android:layout_marginRight="10dp"
            android:textSize="12sp"
           />
        <Button
            android:id="@+id/uderclerk_indent_btn_comit"
            style="@style/buttonStyle"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:background="@drawable/official_bt"
            android:text="提交订单(代发：0，自收：0)"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"/>
    </LinearLayout>
</LinearLayout>